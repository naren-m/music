# Carnatic Music Learning Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Flask Configuration
SECRET_KEY=your-production-secret-key-min-32-chars-here
JWT_SECRET_KEY=your-jwt-secret-key-different-from-secret-key
FLASK_ENV=development

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=carnatic_learning
POSTGRES_USER=carnatic_user
POSTGRES_PASSWORD=your-secure-database-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password

# Audio Processing Configuration
AUDIO_SAMPLE_RATE=44100
AUDIO_BUFFER_SIZE=2048
DEFAULT_SA_FREQUENCY=261.63

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=16
UPLOAD_FOLDER=uploads

# Security Configuration
SESSION_TIMEOUT_HOURS=24
RATE_LIMIT_ENABLED=true
CSRF_ENABLED=true

# External Service Keys (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/carnatic.log

# Production Security Headers
FORCE_HTTPS=false
SECURE_COOKIES=false