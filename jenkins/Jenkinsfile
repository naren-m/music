#!/usr/bin/env groovy
import groovy.transform.Field
/**
 * Jenkins Pipeline for Music (Carnatic Learning Platform) Multi-Architecture Build and Deployment
 * 
 * GitOps Workflow:
 * 1. Build multi-arch image (amd64 + arm64)
 * 2. Push to local registry
 * 3. Clone homelab GitOps repository
 * 4. Update image tag in deployment.yaml
 * 5. Commit and push back to GitOps repo
 * 6. Trigger ArgoCD sync
 */

// Pipeline configuration
@Field def config = [
    // Registry settings
    registryHost: '192.168.68.124',
    registryPort: '30501',
    imageName: 'music',

    // GitOps settings
    manifestRepoUrl: 'https://github.com/naren-m/homelab.git',
    gitCredentialsId: 'github-ssh-key',
    manifestRelativePath: 'base/applications/music',

    // Kubernetes settings
    namespace: 'music',
    kubeconfigId: 'homelab-kubeconfig',

    // Build settings
    platforms: 'linux/amd64',
    builderName: 'homelab-builder',
    dockerfilePath: 'Dockerfile',
    buildContext: '.',

    // Verification settings
    healthCheckEndpoint: '/api/v1/health',
    healthCheckPort: '5001',
    healthCheckRetries: 10,
    healthCheckDelay: 10, // seconds
]

// Global variables
@Field def imageTag = ''
def kubectlBin = 'kubectl'

pipeline {
    agent {
        label 'docker-buildx'
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '5'))
        disableConcurrentBuilds()
        timeout(time: 2, unit: 'HOURS')
        timestamps()
    }

    environment {
        REGISTRY = "${config.registryHost}:${config.registryPort}"
        IMAGE_NAME = "${config.imageName}"
        FULL_IMAGE_NAME = "${REGISTRY}/${IMAGE_NAME}"
        DOCKER_BUILDKIT = '1'
        BUILDX_BUILDER = "${config.builderName}"
    }

    stages {
        stage('Preparation') {
            steps {
                script {
                    echo "═══════════════════════════════════════════════════════════"
                    echo "Pipeline: Music Multi-Arch GitOps Build & Deploy"
                    echo "═══════════════════════════════════════════════════════════"

                    imageTag = generateTag()
                    echo "Generated image tag: ${imageTag}"

                    echo """
                    Build Configuration:
                    - Registry: ${REGISTRY}
                    - Image: ${IMAGE_NAME}
                    - Tag: ${imageTag}
                    - Platforms: ${config.platforms}
                    """
                }
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Multi-Arch Image') {
            steps {
                script {
                    setupBuildx()
                    buildMultiArchImage(imageTag, config.platforms, config.dockerfilePath, config.buildContext)
                }
            }
        }

        stage('Test Image') {
            steps {
                script {
                    testImage(imageTag, config.healthCheckEndpoint)
                }
            }
        }

        stage('Update Manifest (GitOps)') {
            steps {
                script {
                    echo "═══════════════════════════════════════════════════════════"
                    echo "Stage: Updating GitOps Repository"
                    echo "═══════════════════════════════════════════════════════════"
                    
                    updateGitOpsManifest(imageTag)
                }
            }
        }

        stage('Sync & Verify') {
            steps {
                script {
                    echo "═══════════════════════════════════════════════════════════"
                    echo "Stage: Syncing ArgoCD & Verifying Deployment"
                    echo "═══════════════════════════════════════════════════════════"
                    
                    kubectlBin = setupKubectl()
                    
                    withKubeConfig([credentialsId: config.kubeconfigId]) {
                        // Trigger ArgoCD Sync
                        sh "${kubectlBin} patch app homelab-applications -n argocd --type merge -p '{\"operation\":{\"initiatedBy\":{\"username\":\"jenkins\"},\"sync\":{\"revision\":\"HEAD\"}}}'"
                        
                        // Wait for rollout
                        sh "${kubectlBin} rollout status deployment/music -n ${config.namespace} --timeout=300s"
                        
                        // Verify replicas
                        verifyDeployment(kubectlBin)
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline Completed Successfully!"
        }
        failure {
            echo "❌ Pipeline Failed!"
        }
        always {
            cleanWs()
        }
    }
}

// ═══════════════════════════════════════════════════════════════════════════
// Helper Functions
// ═══════════════════════════════════════════════════════════════════════════

def generateTag() {
    def timestamp = sh(script: "date '+%H%M%S-%d%b%y'", returnStdout: true).trim()
    def gitHash = sh(script: "git rev-parse --short=7 HEAD", returnStdout: true).trim()
    return "${timestamp}-${gitHash}"
}

def setupBuildx() {
    sh """
        mkdir -p /tmp/buildx-config
        cat > /tmp/buildx-config/buildkitd.toml << 'TOML'
[registry."192.168.68.124:30501"]
  http = true
  insecure = true
TOML
        if docker buildx inspect ${config.builderName} >/dev/null 2>&1; then echo "Builder exists"; else
        docker buildx create --name ${config.builderName} --driver docker-container --config /tmp/buildx-config/buildkitd.toml --use --bootstrap; fi
    """
}

def buildMultiArchImage(tag, platforms, dockerfilePath, buildContext) {
    sh "docker buildx build --platform ${platforms} --tag ${FULL_IMAGE_NAME}:${tag} --tag ${FULL_IMAGE_NAME}:latest --builder ${config.builderName} --file ${dockerfilePath} --push ${buildContext}"
}

def testImage(tag, healthCheckEndpoint) {
    echo "Running container smoke test (amd64)..."
    sh """
        docker pull --platform linux/amd64 ${FULL_IMAGE_NAME}:${tag}
        CONTAINER_ID=\$(docker run -d -p 15001:5001 -e SECRET_KEY=jenkins-test -e FLASK_ENV=development -e DATABASE_URL=sqlite:///test.db ${FULL_IMAGE_NAME}:${tag})
        sleep 20
        HEALTH_STATUS=\$(curl -sf http://localhost:15001${healthCheckEndpoint} > /dev/null && echo "ok" || echo "fail")
        docker stop \$CONTAINER_ID
        docker rm \$CONTAINER_ID
        if [ "\$HEALTH_STATUS" != "ok" ]; then
            echo "❌ Health check failed"
            exit 1
        fi
        echo "✅ Health check passed"
    """
}

def updateGitOpsManifest(tag) {
    dir('homelab-gitops') {
        // Clone homelab repo
        checkout([
            $class: 'GitSCM', 
            branches: [[name: 'main']], 
            userRemoteConfigs: [[url: config.manifestRepoUrl, credentialsId: config.gitCredentialsId]]
        ])
        
        sh """
            # Update image tag in deployment.yaml
            sed -i "s|image: .*music:.*|image: ${FULL_IMAGE_NAME}:${tag}|g" ${config.manifestRelativePath}/deployment.yaml
            
            # Commit and push
            git config user.email "jenkins@hanuma.com"
            git config user.name "Jenkins CI"
            git add .
            if git commit -m "chore(music): update image to ${tag} [skip ci]"; then
                git push origin main
                echo "✅ Manifest updated and pushed to GitOps repo"
            else
                echo "⚠️ No changes to commit"
            fi
        """
    }
}

def setupKubectl() {
    def kubectlPath = "${WORKSPACE}/bin/kubectl"
    sh """
        mkdir -p ${WORKSPACE}/bin
        if [ ! -x "${kubectlPath}" ]; then
            curl -sLO "https://dl.k8s.io/release/v1.32.0/bin/linux/amd64/kubectl"
            chmod +x kubectl
            mv kubectl ${kubectlPath}
        fi
    """
    return kubectlPath
}

def verifyDeployment(kubectl) {
    sh """
        ${kubectl} get pods -n ${config.namespace} -l app=music -o wide
        READY_REPLICAS=\$(${kubectl} get deployment music -n ${config.namespace} -o jsonpath='{.status.readyReplicas}')
        if [ "\$READY_REPLICAS" = "" ] || [ "\$READY_REPLICAS" = "0" ]; then
            echo "❌ No ready replicas found"
            exit 1
        fi
        echo "✅ Deployment verified"
    """
}